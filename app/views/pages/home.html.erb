  <% @articles.each do |article| %>
    <div class="row text-justify">
      <div class="col-md-8 col-md-offset-1">
        <hr>
        <div class="hero-unit">
          <h6><%= article.created_at.localtime %></h6>
          <h2><strong><%= article.title %></strong></h2>
